<!-- SIGN UP FORM -->
<div class="demo-card-wide mdl-card mdl-shadow--2dp auth-card" id="sign-up-jumbotron">
  <div class="mdl-card__title mdl-color--black mdl-color-text--white">
    <h2 class="mdl-card__title-text card-title">Sign Up</h2>
  </div>
  <div class="mdl-card__supporting-text">
    <form id="sign-up" class="auth-login-form">
      <fieldset>
        <div class="input-group center-block">
          <input type="text" name="credentials[email]" value="" placeholder="email" id="sign-up-email" class="form-control form-spacing" required>
          <input type="password" name="credentials[password]" value="" placeholder="password" id="sign-up-password" class="form-control form-spacing" required>
          <input type="password" name="credentials[password_confirmation]" value="" placeholder="confirm password" id="sign-up-confirm" class="form-control form-spacing" required>
          <input type="submit" name="submit" value="SUBMIT" class="btn btn-primary btn-md form-spacing" id="sign-up-button">
        </div>
        <div class="auth-responses form-spacing" id="sign-up-response">&nbsp;</div>
      </fieldset>
    </form>
  </div>
</div>
